            <div class="section-wrapper">

                <div class="details-container">

                    <div class="details-wrap">
                        <div class="detail-item">
                            <span>Номер договора </span>
                            <p>@du.ContractNumber</p>
                        </div>

                        <div class="detail-item">
                            <span>Дата открытия</span>
                            <p>@du.OpenDate</p>
                        </div>

                    </div>

                </div>
            </div>
        </div>
